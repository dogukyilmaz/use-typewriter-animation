{
	"compilerOptions": {
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "dist/types",
		"skipLibCheck": true,
		"strict": true,
		"moduleResolution": "Node",
		"target": "ESNext",
		"module": "ESNext",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"types": ["bun-types"],
		"jsx": "react"
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "src/example"]
}
