{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/types",
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src", "esbuild.ts"], // Include both the source code and the build script
  "exclude": ["node_modules", "dist"]
}
