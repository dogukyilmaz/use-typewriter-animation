  "description": "An utility hook to create typewriter animation effect in React.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun run clean && node esbuild.js && bun run types",
