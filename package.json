    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/doguyilmaz/use-typewriter-animation.git"
  },
  "keywords": [
